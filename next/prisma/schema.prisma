generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum FILETYPE {
  // Video Types
  VIDEO_MP4
  VIDEO_WEBM 
  VIDEO_OGG
  VIDEO_MOV
  VIDEO_AVI

  // Image Types
  IMAGE_JPEG
  IMAGE_PNG
  IMAGE_GIF
  IMAGE_SVG
  IMAGE_WEBP
  IMAGE_TIFF
  IMAGE_BMP

  // Audio Types
  AUDIO_MP3
  AUDIO_WAV
  AUDIO_OGG
  AUDIO_AAC
  AUDIO_M4A
  AUDIO_FLAC

  // SUBTITLE Types
  SUBTITLE_SRT
  SUBTITLE_VTT

  // Document Types
  DOCUMENT_PDF
  DOCUMENT_TXT
  DOCUMENT_SRT
  DOCUMENT_VTT
  DOCUMENT_JSON
}

enum ProjectStatus {
  DRAFT
  COMPLETE
}

model User {
  id                     String             @id
  email                  String             @unique
  username               String             @unique
  name                   String
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  imageGenCredits        Int                @default(30)
  videoCraftStoryCredits Int                @default(300)
  videoCraftSceneCredits Int                @default(0)
  audioGenerationCredits Int                @default(1000)
  transcriptionCredits   Int                @default(600)
  files                  File[]
  videoStoryProjects     VideoStoryProject[]
  videoSceneProjects     VideoSceneProject[]
}

model File {
  id                String           @id @default(cuid())
  Key               String           @unique  
  Size              Int
  name              String
  type              FILETYPE
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  userId            String
  user              User             @relation(fields: [userId], references: [id])
  folderPath        String?          
  assetScenes       AssetScene[]
  videoSceneProject VideoSceneProject?
  prompt            String?
  exportForScene    Scene?           @relation("SceneExports", fields: [sceneExportId], references: [id])
  sceneExportId     String?

  @@index([userId])
  @@index([sceneExportId])
}

enum AspectRatio {
  LANDSCAPE   // 16:9
  PORTRAIT    // 9:16
  SQUARE      // 1:1
}

model VideoStoryProject {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  status          ProjectStatus
  description     String       
  tone            String?
  animationTheme  String?
  narrator        String?
  duration        Int
  aspectRatio     AspectRatio  @default(PORTRAIT)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  scenes          Scene[]

  @@index([userId])
}

model VideoSceneProject {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  status      ProjectStatus
  prompt      String       
  duration    Int?         // Changed from Float? to Int?
  fileId      String      @unique 
  file        File        @relation(fields: [fileId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
}

model Scene {
  id                 String            @id @default(cuid())
  videoStoryProjectId String
  videoStoryProject  VideoStoryProject @relation(fields: [videoStoryProjectId], references: [id], onDelete: Cascade)
  sceneOrder         Int
  description        String
  narration          String            
  startTime          Int               @default(0)
  duration           Int               @default(0)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  assets             AssetScene[]
  exports            File[]            @relation("SceneExports")

  @@index([videoStoryProjectId])
}

model AssetScene {
  id        String    @id @default(cuid())
  sceneId   String
  scene     Scene     @relation(fields: [sceneId], references: [id], onDelete: Cascade)
  fileId    String
  file      File      @relation(fields: [fileId], references: [id], onDelete: Cascade)
  assetType AssetType
  order     Int?      
  duration  Int?      // Changed from Float? to Int?
  startTime Int?      // Changed from Float? to Int?

  @@unique([sceneId, fileId])
  @@index([sceneId])
  @@index([fileId])
}

enum AssetType {
  IMAGE
  AUDIO
  VIDEO
  SUBTITLE
  DOCUMENT
}
